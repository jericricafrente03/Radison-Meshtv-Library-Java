<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#05074a91">

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#0a58a6"
                android:gravity="center_horizontal"
                android:paddingLeft="2dp"
                android:paddingStart="2dp"
                android:text="18 SATURDAY"
                android:textAllCaps="true"
                android:textColor="#ffff"
                android:textSize="10sp"
                android:textStyle="bold"/>


            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:tooltipText="Weather"
                app:srcCompat="@drawable/w01d" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#102e2d2d"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="10dp"
                android:text="30"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="#0a58a6"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="10dp"
                android:singleLine="true"
                android:maxLines="1"
                android:text="Mostly Sunny"
                android:textAllCaps="false"
                android:textColor="#0a58a6"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>