<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_mid"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_temp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toTopOf="@+id/gl_mid"
        app:layout_constraintEnd_toStartOf="@+id/iv_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom|end"
        android:text="Temperature"
        android:textColor="#254EA0"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_desc"
        android:textSize="16sp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@+id/gl_mid"
        app:layout_constraintEnd_toStartOf="@+id/iv_weather"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top|end"
        android:maxLines="1"
        android:text="Description"
        android:singleLine="true"
        android:textColor="#254EA0"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_weather"
        android:src="@drawable/w01d"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitEnd"/>

</androidx.constraintlayout.widget.ConstraintLayout>